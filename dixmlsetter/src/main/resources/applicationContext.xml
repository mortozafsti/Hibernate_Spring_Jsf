<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="a2" class="com.example.dixmlsetter.entity.Address">
        <property name="state" value="Dhanmondi"/>
        <property name="city" value="Dhaka"/>
        <property name="country" value="Bangladesh"/>
    </bean>
    <bean id="a3" class="com.example.dixmlsetter.entity.Student">
        <property name="id" value="1243288"/>
        <property name="name" value="Mortoza"/>
        <property name="address" ref="a2"/>

    </bean>

</beans>